{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "run api",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
      "args": ["--transpile-only", "${workspaceRoot}/index.ts"],
      "restart": true,
      "port": 9230,
      "console": "integratedTerminal",
      "outputCapture": "std"
    },
    {
      "name": "debug jest tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--no-cache",
        "--testTimeout",
        "3600000"
      ],
      "console": "integratedTerminal",
      "args": ["${fileBasenameNoExtension}"],
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "name": "debug ts script",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
      "args": ["--files", "${relativeFile}"],
      "env": {
        "TS_NODE_FILES": "true"
      },
      "restart": true,
      "console": "integratedTerminal",
      "outputCapture": "std"
    }
  ]
}
